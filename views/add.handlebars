<h1 class="heading">Enter New Player</h1>
<article>
    <form method="POST" action="/addPlayer" enctype="multipart/form-data">
        <div class="input-field">
            <label>Name:</label>
            <input type="text" name="name" size="50" placeholder="Enter Player Name">
        </div>
         <div class="input-field">
            <label>Age:</label>
            <input type="text" name="age" size="50" placeholder="Enter Player Age">
        </div>
        <div class="input-field">
            <label>Current Team:</label>
            <select name="team">
                <option value="ATL">Hawks</option>
                <option value="BKN">Nets</option>
                <option value="BOS">Celtics</option>
                <option value="CHA">Hornets</option>
                <option value="CHI">Bulls</option>
                <option value="CLE">Cavaliers</option>
                <option value="DAL">Mavericks</option>
                <option value="DEN">Nuggets</option>
                <option value="DET">Pistons</option>
                <option value="GSW">Warriors</option>
                <option value="HOU">Rockets</option>
                <option value="IND">Pacers</option>
                <option value="LAC">Clippers</option>
                <option value="LAL">Lakers</option>
                <option value="MEM">Grizzlies</option>
                <option value="MIA">Heat</option>
                <option value="MIL">Bucks</option>
                <option value="MIN">Timberwolves</option>
                <option value="NOP">Pelicans</option>
                <option value="NYK">Knicks</option>
                <option value="OKC">Thunder</option>
                <option value="ORL">Magic</option>
                <option value="PHI">76ers</option>
                <option value="PHX">Suns</option>
                <option value="POR">Trailblazers</option>
                <option value="SAC">Kings</option>
                <option value="SAS">Spurs</option>
                <option value="TOR">Raptors</option>
                <option value="UTA">Jazz</option>
                <option value="WAS">Wizards</option>
            </select>
        </div>
        <div class="input-field">
            <label>All Teams:</label>
            <input type="text" name="teams" size="50" placeholder="Team1 Team2 Team3 (seperated by spaces)">
        </div>
        <div class="input-field">
            <label>Championships:</label>
            <input type="text" name="chmps" size="50" placeholder="Enter Number of Championships Won">
        </div>
        <div class="input-field">
            <label>Retired:</label>
            <input type="text" name="retired" size="50" placeholder="yes/no">
        </div>
        <div class="input-field">
            <label>Height:</label>
            <input type="text" name="height" size="50" placeholder="Enter Player Height(Feet'Inches)">
        </div>
        <div class="input-field">
            <label>Position:</label>
            <input type="text" name="position" size="50" placeholder="Enter Player Position">
        </div>
        <div class="input-field">
            <label>Weight:</label>
            <input type="text" name="weight" size="50" placeholder="Enter Player Weight">
        </div>
        <div class="input-field">
            <label>Image:</label>
            <input type="text" name="img" size="50" placeholder="Enter Image URL">
        </div>
        <div class="input-field">
            <label>Upload image:</label>
            <input type="file" name="image" alt="Submit">
        </div>
        <button type="submit">Submit</button>
    </form>
</article>
